  <script is:inline>
    const modalHandlers = [
      { openId: 'petanca-open', modalId: 'petanca-modal', bgId: 'petanca-modal-bg', closeId: 'petanca-close' },
      { openId: 'charanga-open', modalId: 'charanga-modal', bgId: 'charanga-modal-bg', closeId: 'charanga-close' },
      { openId: 'domino-open', modalId: 'domino-modal', bgId: 'domino-modal-bg', closeId: 'domino-close' },
    ];

    modalHandlers.forEach(({ openId, modalId, bgId, closeId }) => {
      const openBtn = document.getElementById(openId);
      const modal = document.getElementById(modalId);
      const modalBg = document.getElementById(bgId);
      const closeBtn = document.getElementById(closeId);
      
      if (openBtn && modal && modalBg) {
        openBtn.addEventListener('click', () => {
          modal.classList.remove('hidden');
          document.body.style.overflow = 'hidden';
        });
        
        const closeModal = () => {
          modal.classList.add('hidden');
          document.body.style.overflow = 'auto';
        };
        
        modalBg.addEventListener('click', closeModal);
        if (closeBtn) {
          closeBtn.addEventListener('click', closeModal);
        }
      }
    });

    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        modalHandlers.forEach(({ modalId }) => {
          const modal = document.getElementById(modalId);
          if (modal && !modal.classList.contains('hidden')) {
            modal.classList.add('hidden');
            document.body.style.overflow = 'auto';
          }
        });
      }
    });
  </script>

