---
import '../styles/global.css'; // Importa los estilos globales de Tailwind CSS

const { title } = Astro.props;
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Fiestas de Las Terreras: programa, galería, patrocinadores y contacto. Celebra con nosotros los días 1, 2 y 3 de Agosto en Las Terreras." />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/jpeg" href="/favicon.jpg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <!-- SEO improvements -->
    <meta name="keywords" content="Fiestas, Las Terreras, Programa, Galería, Patrocinadores, Contacto, Agosto, Música, Tradición, Eventos, Pueblo" />
    <meta name="author" content="Adrian Porlan" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content="Fiestas de Las Terreras: programa, galería, patrocinadores y contacto. Celebra con nosotros los días 1, 2 y 3 de Agosto en Las Terreras." />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://lasterreras.pages.dev/" />
    <meta property="og:image" content="/fiestas/cristo.jpg" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content="Fiestas de Las Terreras: programa, galería, patrocinadores y contacto. Celebra con nosotros los días 1, 2 y 3 de Agosto en Las Terreras." />
    <meta name="twitter:image" content="/fiestas/cristo.jpg" />
    <link rel="canonical" href="https://lasterreras.pages.dev/" />
  </head>
  <body class="bg-white text-gray-900 transition-colors duration-300 min-h-screen">
    <BannerAviso />
    <Header />
    <slot />
    <Footer />
  </body>
</html>
